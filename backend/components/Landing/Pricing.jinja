    </Utils.Tab>
    <Utils.Tab title="Anual -40%" tabId="anual">
      <div class="flex items-center justify-center max-w-7xl gap-10 pt-16">
        {% set features1 = ['5 horas/mes', 'Restablecimiento de uso cada mes', 'Se factura una vez al año', 'Agrande
        planes
        anuales en cualquier momento'] %}
        <Landing.PriceCard title="Lite" desc="Para equipos pequeños y uso individual" price="5" features={features1} />
        {% set features2 = ['40 horas/mes', 'Restablecimiento de uso cada mes', 'Se factura una vez al año', 'Actualice
        o
        degrade otros planes
        anuales en cualquier momento', 'Créditos extra con precios preferenciales'] %}
        <Landing.PriceCard title="Pro" desc="Profesionales con alto uso de transcripción y funcionalidades avanzadas"
          price="17" features={features2} popular={True} />
        {% set features3 = ['Design system', 'Components', 'Lifetimes updates', 'Comercial license'] %}
        <Landing.PriceCard title="Equipos" desc="Hermoso paquete de objetos 3D" price="64" features={features2}
          by="+10$ per user per month" />
      </div>
    </Utils.Tab>

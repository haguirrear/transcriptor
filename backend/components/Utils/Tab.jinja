{#def tabId, title #}

<div @click="selectTab('{{tabId}}')" :class="{
    'bg-green-700 text-white': isSelected('{{tabId}}'),
    'bg-transparent text-gray-600 hover:text-black': !isSelected('{{tabId}}')
  }" class="rounded-xl px-4 py-2 cursor-pointer">
  {{title}}
</div>
<template x-teleport=".tabContents">
  <div x-show="isSelected('{{tabId}}')">
    {{content}}
  </div>
</template>

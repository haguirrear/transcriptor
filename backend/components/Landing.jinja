{#css /static/styles/landing.css #}
{#js defer /static/dist/base.js #}

<BaseHtml title="Revol" class="font-sans relative">
  <Landing.Header />
  <div class="flex flex-col items-center">
    <!-- How it works  -->
    <Landing.HowWorks />
    <!-- Pricing -->
    <Landing.Pricing />
  </div>
  <!-- spacer -->
  <div class="py-20"></div>
  <!-- Banner revol team -->
  <div class="relative w-full h-full text-white">
    <img class="w-full h-full object-cover bg-gradient-to-b from-blue-300 to-pink-300 max-h-[48rem]"
      src="../../static/img/rainbow3.png" alt="3D objects">
    <div class="absolute inset-0 flex flex-col items-center justify-evenly  gap-4 text-center">
      <div class="flex gap-2 pt-12 pt-8">
        {% for i in range(5) %}
        <img class="" src="static/svg/star.svg" alt="Star icon">
        {% endfor %}
      </div>
